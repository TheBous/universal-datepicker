{
  "name": "universal-datepicker",
  "version": "0.0.6",
  "author": "@TheBous <thebous1993@gmail.com> ()",
  "description": "Pure 8kb Vanilla Javascript plug and play datepicker",
  "main": "build/bundle.umd.js",
  "license": "MIT",
  "files": [
    "build",
    "src"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production rollup -c",
    "start": "rollup -cw",
    "commit": "npx git-cz",
    "pack": "npm pack",
    "link": "npm link",
    "changelog": "conventional-changelog",
    "release": "npm run build && npm run changelog && npx np"
  },
  "standard-version": {
    "skip": {
      "bump": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "config": {
    "unsafe-perm": true,
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheBous/universal-datepicker.git"
  },
  "keywords": [
    "javascript",
    "datepicker",
    "calendar",
    "lightweight",
    "universal-calendar",
    "react-datepicker",
    "angular-datepicker",
    "vue-datepicker",
    "vanilla-javascript"
  ],
  "bugs": {
    "url": "https://github.com/TheBous/universal-datepicker/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.9.5",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-replace": "^2.3.2",
    "autoprefixer": "^9.7.6",
    "commitizen": "^4.0.4",
    "conventional-changelog": "^3.1.18",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "np": "^6.2.3",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "rollup": "^2.7.2",
    "rollup-plugin-analyzer": "^3.2.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-livereload": "^1.2.0",
    "rollup-plugin-postcss": "^3.1.1",
    "rollup-plugin-sass": "^1.2.2",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-visualizer": "^4.0.4",
    "standard-version": "^7.1.0"
  },
  "dependencies": {}
}
